
@{
    ViewBag.Title = "Beta";
}

<h2>Beta</h2>
<body>
    @if (IsPost)
    {
        <div class="row">
            <ul class="nav nav-pills nav-stacked col-md-2">
                @for (var i = 0; i < ViewBag.simsnippets.Count; i++)
                {
                    if (i == 0)
                    {
                        <li class="active"><a href=@("#tab" + i) data-toggle="tab">Similar Snippet @i</a></li>
                    }
                    else
                    {
                        <li><a href=@("#tab" + i) data-toggle="tab">Similar Snippet @i</a></li>
                    }
                }
            </ul>
            <div class="tab-content col-md-10">
                @for (var i = 0; i < ViewBag.simsnippets.Count; i++)
                {
                    if (i == 0)
                    {
                        <div class="tab-pane fade in active" id=@("tab" + i)>
                            <ul class="nav nav-tabs nav-justified">
                                <li class="active"><a href=@("#tab" + i + "-1") data-toggle="tab">Source Code A For Beta</a></li>
                                <li><a href=@("#tab" + i + "-2") data-toggle="tab">Source Code B For Beta</a></li>
                            </ul>
                            <div class="tab-content">
                                <div class="tab-pane fade in active" id=@("tab" + i + "-1")>
                                    <p></p>
                                    <pre style="background-color:white">@ViewBag.simsnippets[i].snippet1.text</pre>
                                </div>
                                <div class="tab-pane fade" id=@("tab" + i + "-2")>
                                    <p></p>
                                    <pre style="background-color:white">@ViewBag.simsnippets[i].snippet2.text</pre>
                                </div>
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="tab-pane fade" id=@("tab" + i)>
                            <ul class="nav nav-tabs nav-justified">
                                <li class="active"><a href=@("#tab" + i + "-1") data-toggle="tab">Source Code A For Beta</a></li>
                                <li><a href=@("#tab" + i + "-2") data-toggle="tab">Source Code B For Beta</a></li>
                            </ul>
                            <div class="tab-content">
                                <div class="tab-pane fade in active" id=@("tab" + i + "-1")>
                                    <p></p>
                                    <pre style="background-color:white">@ViewBag.simsnippets[i].snippet1.text</pre>
                                </div>
                                <div class="tab-pane fade" id=@("tab" + i + "-2")>
                                    <p></p>
                                    <pre style="background-color:white">@ViewBag.simsnippets[i].snippet2.text</pre>
                                </div>
                            </div>
                        </div>
                    }
                }
            </div>
        </div>
    }
    else
    {
        <form action="/Beta" method="POST">
            @Html.AntiForgeryToken()
            <ul class="nav nav-tabs nav-justified">
                <li class="active"><a href="#tab1" data-toggle="tab">Source Code A For Beta</a></li>
                <li><a href="#tab2" data-toggle="tab">Source Code B For Beta</a></li>
            </ul>
            <div class="tab-content">
                <div class="tab-pane fade in active" id="tab1">
                    <p></p>
                    <textarea name="source1" class="form-control" rows="25" cols="55" style="font-size:12px; font-family: Courier New; resize: none;"></textarea>
                </div>
                <div class="tab-pane fade" id="tab2">
                    <p></p>
                    <textarea name="source2" class="form-control" rows="25" cols="55" style="font-size:12px; font-family: Courier New; resize: none;"></textarea>
                </div>
            </div>

            <br />
            <button class="btn btn-block btn-primary" type="submit">Beta Start</button>
        </form>
    }
    
</body>